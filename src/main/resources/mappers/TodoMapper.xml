<?xml version="1.0" encoding="UTF-8" ?>
<!--MyBatis에서 사용하는 xmlMapper file - java코드와 DB간의 Mapping을 설정-->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.orgpgm.todopro.mapper.TodoMapper">
    <sql id="search">
<!--   board는 여기 where절 필요     -->
        <where>
            <if test="types != null and types.length > 0">
                <foreach collection="types" item="type" open="(" close=") " separator=" OR ">
                    <if test="type == 't'.toString()">
                        title like concat('%', #{keyword}, '%')
                    </if>
                    <if test="type == 'w'.toString()">
                        writer like concat('%', #{keyword}, '%')
                    </if>
<!--    board는 content like ~ 추가하기                -->
                </foreach>
            </if>

            <if test="finished">
                <trim prefix="and">
                    finished = 1
                </trim>
            </if>
<!--여기 if 절은 boardPro에서 필요 X-->
            <if test="from != null and to != null">
                <trim prefix="and">
                    dueDate between  #{from} and #{to}
                </trim>
            </if>
        </where>
    </sql>
    <!--  Mapper file의 경로  -->
    <select id="getTime" resultType="String">
        select now()
    </select>
    <select id="selectList" resultType="com.orgpgm.todopro.vo.TodoVO">
        select * from tbl_todo
        <include refid="search"></include>
        order by tno desc limit ${skip}, #{size}
    </select>
    <select id="getCount">
        select count(tno) from tbl_todo
        <include refid="search"></include>
    </select>

    <insert id="insert">
        insert into tbl_todo(title, dueDate, writer) values(#{title}, #{dueDate},#{writer})
    </insert>
    <select id="selectOne" resultType="com.orgpgm.todopro.vo.TodoVO">
        select * from tbl_todo where tno=#{tno}
    </select>
    <select id="getList" resultType="com.orgpgm.todopro.vo.TodoVO">
        select * from tbl_todo
    </select>
    <delete id="delete">
        delete from tbl_todo where tno=#{tno}
    </delete>
    <update id="update">
        update tbl_todo set title=#{title}, dueDate=#{dueDate}, finished=#{finished} where tno=#{tno}
    </update>
</mapper>
